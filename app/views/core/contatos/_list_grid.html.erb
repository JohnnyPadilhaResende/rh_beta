                      <td><%= contato.end_telefone %></td>
                      <td><%= contato.end_email %></td> 
                      <td><%= link_to 'Destroy', contato, method: :delete, class: "text-danger", data: { confirm: 'VocÃª tem certeza?' } %></td>              
        <% end %>
      <% end %>
