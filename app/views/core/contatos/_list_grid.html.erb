<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Servidor</th>
        <th>Telefone</th>
        <th>Email</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
    <% @pessoas.each do |pessoa| %>
      <%= content_tag :tr, id: dom_id(pessoa), class: dom_class(pessoa) do %>
                    <td><%= pessoa.nme_pessoa %></td>
                    <td><%= pessoa&.core_contato&.end_telefone %></td>
                    <td><%= pessoa&.core_contato&.end_email %></td> 
                    <td>
                      <%= link_to 'Destroy', 
                      pessoa&.core_contato, 
                      method: :delete, 
                      class: "text-danger", 
                        data: { confirm: 'VocÃª tem certeza?' } if pessoa&.core_contato.present? %>

                        <%= link_to new_core_contato_path(cdg_ordem: pessoa.cdg_ordem), method: :get do %>
                          Edit
                        <% end unless pessoa&.core_contato.present? %>
                      </td> 
                      <% end %>                      
      <% end %>
    </tbody>
  </table>
</div>