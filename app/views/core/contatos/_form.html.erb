<%= form_with(model: contato, local: true) do |form| %>
    <% if contato.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(contato.errors.count, "error") %> proibem este contato de ser salvo:</h2>
        <ul>
        <% contato.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="form-group">
      <%= form.label :cdg_ordem, value: "Servidor:" %>
      <%= form.label :cdg_ordem, value: form.object.core_pessoal.nme_pessoa %>
      <%= form.hidden_field :cdg_ordem %>
    </div>
  <div class="row">
    <div class="form-group col-md-4">
      <%= form.label :end_telefone %>
      <%= form.number_field :end_telefone, class: 'form-control' %>
    </div>
  
    <div class="form-group col-md-8">
      <%= form.label :end_email %>
      <%= form.email_field :end_email, class: 'form-control' %>
    </div>
  </div>
  
     <div class="form-group"> 
      <%= form.submit "Atualizar contatos", class: 'btn btn-primary' %>
  
      <% if contato.persisted? %>
        <%= link_to "Cancel", contato, class: "btn btn-link" %>
      <% else %>
        <%= link_to "Cancel", core_contatos_path, class: "btn btn-link" %>
      <% end %>
    </div>
  <% end %>