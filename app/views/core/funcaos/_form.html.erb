<%= form_with(model: core_funcao, local: true) do |form| %>
  <% if core_funcao.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(core_funcao.errors.count, "error") %> prohibited this core_funcao from being saved:</h2>

      <ul>
      <% core_funcao.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :cdg_funcao %>
    <%= form.number_field :cdg_funcao, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :nme_funcao %>
    <%= form.text_field :nme_funcao, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :dta_inicio_funcao %>
    <%= form.date_select :dta_inicio_funcao, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :dta_fim_funcao %>
    <%= form.date_select :dta_fim_funcao, class: 'form-control' %>
  </div>

  <div class="form-group">
    <% if core_funcao.persisted? %>
      <div class="float-right">
        <%= link_to 'Destroy', core_funcao, method: :delete, class: "text-danger", data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>

    <%= form.submit class: 'btn btn-primary' %>

    <% if core_funcao.persisted? %>
      <%= link_to "Cancel", core_funcao, class: "btn btn-link" %>
    <% else %>
      <%= link_to "Cancel", core_funcaos_path, class: "btn btn-link" %>
    <% end %>
  </div>
<% end %>
