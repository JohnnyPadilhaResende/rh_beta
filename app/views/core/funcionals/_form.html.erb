  <div class="form-group">
    <%= form.label :cdg_ordem %>
    <%= form.number_field :cdg_ordem, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :cdg_funcional %>
    <%= form.number_field :cdg_funcional, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :status %>
    <%= form.number_field :status, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :ref_anomes %>
    <%= form.number_field :ref_anomes, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :dta_admissao %>
