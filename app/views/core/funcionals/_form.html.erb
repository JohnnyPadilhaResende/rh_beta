  </div>

  <div class="form-group">
    <% if core_funcional.persisted? %>
      <div class="float-right">
        <%= link_to 'Destroy', core_funcional, method: :delete, class: "text-danger", data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>

    <%= form.submit class: 'btn btn-primary' %>

    <% if core_funcional.persisted? %>
      <%= link_to "Cancel", core_funcional, class: "btn btn-link" %>
    <% else %>
      <%= link_to "Cancel", core_funcionals_path, class: "btn btn-link" %>
    <% end %>
